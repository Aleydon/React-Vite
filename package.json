{
	"name": "react-vite-template",
	"private": true,
	"description": "A Vite template for React applications with TypeScript, ESLint, Prettier, and Storybook.",
	"author": "Aleydon",
	"license": "MIT",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --host",
		"lint": "eslint . --fix --ext .tsx,.ts --config eslint.config.js",
		"commit": "eslint . --fix --ext .tsx,.ts && prettier --write .  && git add . && npx cz",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"pre:commit": "eslint . --fix --ext .tsx,.ts && prettier . --write && git add .",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"dependencies": {
		"@eslint/js": "^9.31.0",
		"@tailwindcss/vite": "^4.1.11",
		"@testing-library/dom": "^10.4.0",
		"caniuse-lite": "",
		"clsx": "^2.1.1",
		"globals": "^16.3.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-router": "^7.0.1",
		"tailwindcss": "^4.1.11",
		"typescript-eslint": "^8.37.0"
	},
	"devDependencies": {
		"@babel/core": "^7.20.12",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-react": "^7.18.6",
		"@babel/preset-typescript": "^7.26.0",
		"@chromatic-com/storybook": "^4.0.1",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@jest/globals": "^29.7.0",
		"@storybook/addon-docs": "^9.0.17",
		"@storybook/addon-onboarding": "^9.0.17",
		"@storybook/react-vite": "^9.0.17",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@typescript-eslint/eslint-plugin": "^8.37.0",
		"@typescript-eslint/parser": "^8.37.0",
		"@vitejs/plugin-react": "^3.0.0",
		"autoprefixer": "^10.4.20",
		"babel-jest": "^29.4.0",
		"commitizen": "^4.3.1",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jest": "^29.0.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-n": "^17.21.0",
		"eslint-plugin-prettier": "^5.5.1",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-storybook": "^9.0.17",
		"husky": "^9.1.7",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.4.0",
		"jest-environment-jsdom": "^29.4.0",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"storybook": "^9.0.17",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"typescript": "^4.7.4 ",
		"vite": "^7.0.0"
	},
	"resolutions": {
		"@types/react": "19.0.10",
		"@types/react-dom": "19.0.4"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "eslint --fix --config eslint.config.js"
	}
}
